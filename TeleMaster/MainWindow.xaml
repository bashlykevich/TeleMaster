<Window x:Class="TeleMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:TeleMaster.Helpers"
        WindowState="Maximized"
        Loaded="Window_Loaded"
        Width="800"
        Height="600"
        Title="MainWindow">
    <Window.Resources>
        <helpers:VisibilityConverter x:Key="VisibilityConverter"></helpers:VisibilityConverter>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <ListBox Name="lbDevices"
                     MouseDoubleClick="lbDevices_MouseDoubleClick">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Name="cmDevices_Create" Header="Добавить" Click="cmDevices_Create_Click" />
                        <MenuItem Name="cmDevices_Delete" Header="Удалить" Click="cmDevices_Delete_Click" />
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </Grid>
        <Grid Grid.Column="1">
            <StackPanel Orientation="Vertical">
                <ListBox x:Name="lsDisplay"                     
                     MouseDoubleClick="lsDisplay_MouseDoubleClick"
                     ItemsSource="{Binding}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="1"                              
                              Width="60">
                                <Grid Margin="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Rectangle Grid.Row="0" 
                                           Fill="Black"
                                           Opacity="0.5"       
                                           Visibility="{Binding Blink, Converter={StaticResource VisibilityConverter}}"
                                           Canvas.ZIndex="2"
                                           VerticalAlignment="Stretch"
                                           HorizontalAlignment="Stretch"/>
                                    <Image Grid.Row="0" 
                                       Source="Img\client.png" />
                                    <TextBlock Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    Text="{Binding Name}" />
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Margin="10" IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
                <Grid>
                    <ListView Name="lvDeviceLog"
                              VerticalAlignment="Stretch"
                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                              ItemsSource="{Binding}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="100" Header="DeviceName" DisplayMemberBinding="{Binding Path=DeviceName}" />
                                <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Path=Message}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
