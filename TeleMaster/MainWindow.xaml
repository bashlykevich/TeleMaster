<Window x:Class="TeleMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:TeleMaster.Helpers"
        WindowState="Maximized"
        Loaded="Window_Loaded"
        Width="800"
        Height="600"
        Title="MainWindow">
    <Window.Resources>
        <helpers:VisibilityConverter x:Key="VisibilityConverter"></helpers:VisibilityConverter>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="22" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0"
              Grid.Row="0">
            <ListBox 
                    x:Name="lsDisplay"                                 
                    MouseDoubleClick="lsDisplay_MouseDoubleClick"
                    ItemsSource="{Binding}">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Name="cmDevices_Create" Header="Добавить" Click="cmDevices_Create_Click" />
                        <MenuItem Name="cmDevices_Delete" Header="Удалить" Click="cmDevices_Delete_Click" />
                    </ContextMenu>
                </ListBox.ContextMenu>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="1"                              
                              Width="60">
                            <Grid Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Rectangle Grid.Row="0"                                            
                                           Opacity="0.5"       
                                           Visibility="{Binding Blink, Converter={StaticResource VisibilityConverter}}"
                                           Canvas.ZIndex="2"
                                           VerticalAlignment="Stretch"
                                           HorizontalAlignment="Stretch"/>
                                <Image Grid.Row="0" 
                                       Source="Img\client.png" />
                                <TextBlock Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    Text="{Binding Name}" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="10" IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </Grid>
        <Grid Grid.Column="0"
              Grid.Row="1">
            <ListView 
                Name="lvDeviceLog"
                VerticalAlignment="Stretch"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                ItemsSource="{Binding}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="100" Header="DeviceName" DisplayMemberBinding="{Binding Path=DeviceName}" />
                        <GridViewColumn Width="Auto" Header="Message" DisplayMemberBinding="{Binding Path=Message}" />
                    </GridView>
                </ListView.View>                
            </ListView>
        </Grid>
        <StatusBar Grid.Row="2" HorizontalAlignment="Right">
            <StatusBarItem>
                <TextBlock Name="stTime" Text="Старт системы" Width="100"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
